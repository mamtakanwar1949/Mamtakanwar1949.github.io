<div class="box">
<h3>Add WhatsApp Number</h3>

<input type="text" id="number" placeholder="Enter number like 917023537535">

<button onclick="makeLink()">Create Button</button>

<a id="link" target="_blank" style="display:none;">Open WhatsApp</a>
</div>

<script>
function makeLink(){
    var num = document.getElementById("number").value.trim();

    if(num === ""){
        alert("Please enter number");
        return;
    }

    var finalLink = "https://wa.me/" + num;

    var btn = document.getElementById("link");
    btn.href = finalLink;
    btn.style.display = "block";
}
</script>

